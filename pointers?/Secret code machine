#include <iostream>
#include <cstdlib>

using namespace std;

int codemachine(int n){
	
	if (n == 0){
		return 1;
	}
	
	int result = 1; 
	for(int i=n; i >= 1; i--){
		result *= i;
	}
	return result;
}
int main() {
	int(*codeptr)(int) = codemachine;
	
	int n;
	cout<<"enter any number for your code: ";
	cin>>n;
	
	int *secretcode=(int*)malloc(sizeof(int));
	
	if ( secretcode == NULL) {
		cout<<"memory allocation failed ! :"<<endl;
		
		return 1;
	}
	
	*secretcode = (*codeptr)(n);
	cout<<"Your secret code is = "<<*secretcode<<endl;
	
	delete secretcode;
	secretcode = NULL;
	
	return 0;
}




